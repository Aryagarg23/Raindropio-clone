[flake8]
max-line-length = 127
max-complexity = 10
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .tox,
    .coverage,
    htmlcov,
    .mypy_cache,
    .dmypy.json,
    dmypy.json,
    node_modules,
    .vscode,
    migrations
ignore =
    E203,  # whitespace before ':' (conflicts with black)
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator (handled by black)
    F821,  # undefined name (handled by mypy)
    F841,  # unused variable (sometimes needed for API responses)
per-file-ignores =
    __init__.py:F401  # imported but unused (common in __init__.py)
    tests/*:S101  # assert used (tests need asserts)
    conftest.py:S101  # assert used (test configuration)
    core/config.py:S105  # hardcoded password (environment variables)
extend-ignore =
    # Additional ignores for FastAPI/Pydantic patterns
    N805,  # invalid first argument name (self, cls)
    N806,  # variable name should not start/end with underscore
    N812,  # lowercase imported as non-lowercase
    N813,  # camelcase imported as lowercase
    N814,  # camelcase imported as constant
    N815,  # mixedCase variable in global scope
    N816,  # mixedCase variable in class scope
    N817,  # camelcase imported as acronym